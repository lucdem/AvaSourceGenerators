<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Lucdem.Avalonia.SourceGenerators.Sample.Controls">
  <Design.PreviewWith>
	  <Border Background="Gray" BorderBrush="Red">
		  <controls:LabeledButton LabelText="Placeholder"/>
	  </Border>
  </Design.PreviewWith>

  <Style Selector="controls|LabeledButton">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <Button>
			  <Label Content="{TemplateBinding LabelText}"/>
		  </Button>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
